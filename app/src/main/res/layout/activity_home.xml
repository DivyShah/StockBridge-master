<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abc.stockbridge.HomeActivity">


    <TextView
        android:id="@+id/latest_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/crypto"
            android:layout_marginTop="25dp"
            android:text="Cryptocurrency"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textAlignment="center"
            android:onClick="toggle_contents"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sub_data"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/commodity"

            android:text="Commodity"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/news"

            android:text="News"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mutual_fund"

            android:text="Mutual Fund"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textStyle="italic"
            />
    </LinearLayout>
</LinearLayout>
